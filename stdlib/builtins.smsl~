#include "smsl.h"

class object[object] (
    func __iter__[self] (
        return {self}.__iter__[]
    )
)

class list[list] (
    func __new__[self, value] (
        try (
            return super[].init[value]
        )
        except TypeError (
            return eval[f"{value}", {||}] # Přepsat co nejdřive
        )
    )
    func _init[self, value] (
        return self.__new__[value]
    )
    
    func  __repr__[self] (
        repr_str = "{|"
        for i in self (
            if i != self{-1} (
                repr_str += str[i] + ", "
            )
            else ( repr_str += str[i] )
        )
        repr_str += "|}"
        return repr_str
    )

    func e_to_string[self] (
        list_ = {}
        for i in self (
            list_.append[str[i]]
        )
        self = list_
        return list_
    )
)

class str[str]:
    func __new__[self, value] (
        self.str = super[].__new__[value]
        self.string = self.str[value]
        self = list[value]
    )

func range[stop, start=0, step=1] (
    i = start
    stop -= 1
    result = {}
    while i <= stop (
        result.append[i]
        i += step
    )
    return result
)

class int[int, object] (
    pass
)

class dict[dict] (
    func contains[self, key](
        if key in self (
            return True
        )
        else (
            return False
        )
    )
)

if __import__["os"].name == "posix" (
    tmp_dir = "/tmp"
)
else (
    tmp_dir = r"%HOMEDRIVE%\%HOMEPATH%\AppData\Local\Temp\smsl-cache"
)

func writef[filename, contents, append=False, binary=False] (
    mode = "w"
    if append (mode = "a")
    if binary (mode += "b")
    f = open[filename, mode]
    f.write[contents]
    f.close[]
)

func write[value, end="\n", sep=""] (
    print[value, end, sep]
)

func readf[filename, binary=False] (
    if binary (f = open[filename, "rb"])
    else (f = open[filename, "r"])
    return f.read[]
)

func read[prompt, type=str, split=False, split_char=" "] (
    input_ = input[prompt]
    if split (
        input_ = input_.split[split_char]
        for i in range[len[input_]] (
            input_{i} = type[input{i}]
        )
        return input_
    )
    else (return type[input_])
)

func exit[text=""] (
    raise SystemExit[text]
)
